{
    "singleQuote": true,
    "tabWidth": 4,
    "bracketSpacing": true,
    "printWidth": 120,
    "endOfLine": "lf",
    "overrides": [{
        "files": "{src,test}/**/*.ts",
        "options": {
            "parser": "typescript"
        }
    }, {
        "files": [".prettierrc", "*.json"],
        "options": {
            "parser": "json"
        }
    }]
}
